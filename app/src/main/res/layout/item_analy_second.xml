<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_75dp"
    android:layout_marginBottom="@dimen/padding_1px"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_8dp"
            android:text="--"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/ag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#ff888888"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/padding_1px"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd" />

    <TextView
        android:id="@+id/new_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_8dp"
        android:text="--"
        android:textColor="#ffdb2c1f"
        android:textSize="@dimen/textSize_14sp" />

    <View
        android:layout_width="@dimen/padding_1px"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd" />

    <TextView
        android:id="@+id/zhangdiefu_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_8dp"
        android:text="--"
        android:textColor="#ffdb2c1f"
        android:textSize="@dimen/textSize_14sp" />

    <View
        android:layout_width="@dimen/padding_1px"
        android:layout_height="match_parent"
        android:background="@color/color_dddddd" />

    <TextView
        android:id="@+id/chengjiaoliang_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_8dp"
        android:text="--"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/textSize_14sp" />
</LinearLayout>