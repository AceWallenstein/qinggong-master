<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingTop="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/padding_85dp"
        android:layout_height="@dimen/padding_85dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_85dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electric Motor..."
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DA JIANG"
            android:textColor="#ffa3b1cc"
            android:textSize="12sp" />

        <View
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="@dimen/padding_0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_login_bg"
            android:paddingLeft="@dimen/padding_8dp"
            android:paddingTop="@dimen/padding_2dp"
            android:paddingRight="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_2dp"
            android:text="Select"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>