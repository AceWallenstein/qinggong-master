<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:layout_marginRight="@dimen/padding_15dp"
        android:background="@drawable/xiaoshouyuan_bg"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/padding_5dp"
        android:padding="@dimen/padding_15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jifen_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="+15 Credits"
                android:textColor="#ffd20b17"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/jifen_jiaoyi_tima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="29th April,2017"
                android:textColor="#ff9ba8c2"
                android:visibility="invisible"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/liulan_huodedianshu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Browse to get points"
                android:textColor="#ffd20b17"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shi_fen_miao_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="20:09:45"
                android:textColor="#ff9ba8c2"
                android:textSize="13sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>