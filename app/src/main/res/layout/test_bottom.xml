<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<!--    <ImageView
        android:id="@+id/testbanner"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:background="@mipmap/default_banner"
        android:scaleType="fitXY" />-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_no_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:scaleType="fitXY"
                android:src="@mipmap/default_banner" />
        </LinearLayout>

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/banner_home_top"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:background="@color/white"
            android:visibility="gone"
            app:banner_pageChangeDuration="3000"
            app:banner_pointAutoPlayAble="true"
            app:banner_pointAutoPlayInterval="3000"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_pointDrawable="@drawable/bga_banner_selecto_point"
            app:banner_pointTopBottomMargin="@dimen/padding_5dp"
            app:banner_transitionEffect="alpha"></cn.bingoogolapple.bgabanner.BGABanner>

    </FrameLayout>
</RelativeLayout>