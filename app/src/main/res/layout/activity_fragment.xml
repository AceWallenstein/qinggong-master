<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_13dp"
    android:layout_marginTop="@dimen/padding_6dp"
    android:layout_marginRight="@dimen/padding_13dp"
    android:layout_marginBottom="@dimen/padding_6dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/stock_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xuxian"
        android:orientation="vertical"
        android:padding="@dimen/padding_2dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_166dp"
            android:scaleType="fitXY" />


    </LinearLayout>
</LinearLayout>