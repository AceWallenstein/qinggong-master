                </LinearLayout>


            </LinearLayout>
            <!--关注公众号 相关-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_15dp"
                android:layout_marginTop="@dimen/padding_10dp"
                android:layout_marginRight="@dimen/padding_15dp"
                android:layout_marginBottom="@dimen/padding_28dp"
                android:background="@drawable/while_drawable"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_15dp"
                android:paddingRight="@dimen/padding_15dp">

                <RelativeLayout
                    android:id="@+id/attontion_gongzhonghao_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_15dp"
                    android:layout_marginBottom="@dimen/padding_15dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@mipmap/gongzhonghao"
                        android:drawablePadding="@dimen/padding_10dp"
                        android:gravity="center"
                        android:text="@string/attention_code"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/textSize_15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/next_page" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#F5F5F5"></View>

                <!--推荐-->
                <RelativeLayout
                    android:id="@+id/recommend_friend_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textSize_15sp"
                    android:layout_marginBottom="@dimen/padding_15dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@mipmap/tuijain"
                        android:drawablePadding="@dimen/padding_10dp"
                        android:gravity="center"
                        android:text="@string/recommend"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/textSize_15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/next_page" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#F5F5F5"></View>

                <!--邀请-->
                <RelativeLayout
                    android:id="@+id/invite_friend_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_15dp"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/padding_15dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@mipmap/yaoqing"
                        android:drawablePadding="@dimen/padding_10dp"
                        android:gravity="center"
                        android:text="@string/invite_friend"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/textSize_15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/next_page" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#F5F5F5"></View>

                <RelativeLayout
                    android:id="@+id/about_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textSize_15sp"
                    android:layout_marginBottom="@dimen/padding_15dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@mipmap/guanyu"
                        android:drawablePadding="@dimen/padding_10dp"
                        android:gravity="center"
                        android:text="@string/about_"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/textSize_15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/next_page" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#F5F5F5"></View>


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>