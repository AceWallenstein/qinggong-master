<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lin_my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_bg"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_15dp"
                    android:paddingRight="@dimen/padding_15dp">

                    <TextView
                        android:id="@+id/my_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_50dp"
                        android:gravity="center"
                        android:text="@string/my"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_18sp" />


                    <LinearLayout
                        android:id="@+id/userhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/my_title"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:orientation="horizontal">
                        <!--头像-->
                        <FrameLayout
                            android:id="@+id/fl_head"
                            android:layout_width="@dimen/padding_55dp"
                            android:layout_height="@dimen/padding_55dp"
                            android:layout_gravity="center_vertical">

                            <com.national.qinggong.customview.SelectableRoundedImageView
                                android:id="@+id/img_user_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/userdefault"
                                app:sriv_left_bottom_corner_radius="30dip"
                                app:sriv_left_top_corner_radius="30dip"
                                app:sriv_right_bottom_corner_radius="30dip"
                                app:sriv_right_top_corner_radius="30dip" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/padding_15dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:id="@+id/username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#ffffffff"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/userphone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_9dp"
                                android:text=""
                                android:textColor="#ffffffff"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/user_head_next" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_my"
                    android:layout_marginLeft="@dimen/padding_15dp"
                    android:layout_marginTop="-60dp"
                    android:layout_marginRight="@dimen/padding_15dp"
                    android:background="@drawable/while_drawable"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/padding_17dp"
                        android:paddingBottom="@dimen/padding_17dp">

                        <!---->
                        <LinearLayout
                            android:id="@+id/ll_lookforwork_wait_interview"
                            android:layout_width="@dimen/padding_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/wenzhang" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_9dp"
                                android:gravity="center_horizontal"
                                android:text="文章"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/textSize_12" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_interview_assistant"
                            android:layout_width="@dimen/padding_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/kefu_" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_9dp"
                                android:text="@string/kefu"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/textSize_12" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_signup_record"
                            android:layout_width="@dimen/padding_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/renwu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_9dp"
                                android:text="@string/renwu"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/textSize_12" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
            <!--热门课程-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50dp"
                    android:layout_marginLeft="@dimen/padding_15dp"

                    android:layout_marginRight="@dimen/padding_15dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:text="热门课程"

                        android:textColor="#ff333333"
                        android:textSize="@dimen/textSize_18sp" />


                    <LinearLayout
                        android:id="@+id/hot_lin_more"
                        android:layout_width="@dimen/padding_50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                       >

                        <ImageView
                            android:id="@+id/more_recomment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/next_page" />
                    </LinearLayout>

                </RelativeLayout>


                <!--热门课程-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15dp"
                    android:layout_marginRight="@dimen/padding_15dp"
                    android:background="@drawable/while_drawable"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_5dp"
                    android:paddingTop="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/padding_5dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/class_room_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:visibility="visible" />
