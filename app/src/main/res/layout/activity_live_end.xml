<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_live_end"
    android:orientation="vertical"
    tools:context=".ui.activity.LiveEndActivity">

    <LinearLayout
        android:id="@+id/rl_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/top_back_while" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.gcssloop.widget.RCRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:round_corner="@dimen/padding_44dp">

            <ImageView
                android:id="@+id/image_head"
                android:layout_width="88dp"
                android:layout_height="88dp" />
        </com.gcssloop.widget.RCRelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="End of Live Broadcast"
            android:textColor="#ffffffff"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10dp"
            android:text=" Duration 01:20:38"
            android:textColor="#ffffffff"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_20dp"
            android:layout_marginTop="@dimen/padding_30dp"
            android:layout_marginRight="@dimen/padding_20dp"
            android:background="@drawable/bg_live_end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="26091"
                    android:textColor="#ffffffff"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Follow"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/padding_30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="26091"
                    android:textColor="#ffffffff"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Browse"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40dp"
            android:layout_marginLeft="@dimen/padding_20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="@dimen/padding_20dp"
            android:background="@drawable/botton_login_bg"
            android:gravity="center"
            android:text="It's on Again"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40dp"
            android:layout_marginLeft="@dimen/padding_20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/padding_20dp"
            android:gravity="center"
            android:text="Playback"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>