<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/include_title"></include>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/app_logo_rel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_156dp">

            <ImageView
                android:layout_width="@dimen/padding_150dp"
                android:layout_height="@dimen/padding_100dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/logo_gfmf" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_logo_rel"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/app_update_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/padding_15dp">


                <TextView
                    android:id="@+id/new_now_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:text="版本更新"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:text="已是最新版本"
                    android:textColor="@color/color_ff888888"
                    android:textSize="@dimen/textSize_14sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F5F5F5"></View>

            <!--帮助中心-->
            <RelativeLayout
                android:id="@+id/help_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/padding_15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:text="帮助中心"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_15sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F5F5F5"></View>


            <!--意见反馈-->
            <RelativeLayout
                android:id="@+id/suggest_face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/padding_15dp">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:text="意见反馈"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_15sp" />


            </RelativeLayout>

        </LinearLayout>


        <!--隐私-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/padding_17dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/private_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免责声明 | 隐私政策"
                    android:textColor="@color/color_272525"
                    android:textSize="@dimen/textSize_13sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_12dp"
                android:text="国富民丰版权所有"
                android:textColor="@color/color_ff888888"
                android:textSize="@dimen/textSize_12sp" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>