<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="@dimen/padding_100dp"
            android:layout_height="@dimen/padding_70dp"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginTop="@dimen/padding_20dp"
            android:scaleType="fitXY"
            ></ImageView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_22dp"
            android:layout_marginTop="@dimen/padding_20dp"
            android:layout_marginRight="@dimen/padding_20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_content"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:gravity="center_vertical"
                android:text="即使是受到疫情冲击的节后首周，金融业的招聘薪资也远高于平均!"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/wenzhang_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:text="04-06  10:43"
                android:textColor="#ff888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/look_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@mipmap/message_ice"
                android:drawablePadding="@dimen/padding_10dp"
                android:text="123456"
                android:textColor="#ffd12c26"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/padding_20dp"
        android:background="#F5F5F5"></View>
</LinearLayout>