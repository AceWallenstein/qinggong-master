<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_45dp"
    android:paddingRight="@dimen/padding_45dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_40dp"
        android:background="@mipmap/qinggong_logo" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_39dp"
        android:layout_marginTop="@dimen/padding_20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Consumer"
            android:background="@drawable/logo_choose_bg"
            android:textColor="#D20B17"
            android:textSize="@dimen/textSize_17sp" />

        <TextView
            android:id="@+id/saleman_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Salesman"
            android:textColor="#AFBEDB"
            android:textSize="@dimen/textSize_17sp" />

        <TextView
            android:id="@+id/guanliyuan_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Rirm"
            android:textColor="#AFBEDB"
            android:textSize="@dimen/textSize_17sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_30dp"
        android:text="Phone/Email"
        android:textColor="#ffb8c7e6"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_39dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

<!--1186888289@qq.com-->
        <EditText
            android:id="@+id/phone_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Please input account"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/padding_5dp"
            android:layout_marginBottom="@dimen/padding_5dp"
            android:background="@color/white" />
    </LinearLayout>
    <!--密码登录start-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_39dp"
        android:text="Password"
        android:textColor="#ffb8c7e6"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/mima_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_39dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:id="@+id/pass_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:password="true"
            android:textColorHint="@color/grey"
            android:hint="Please input password"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/padding_5dp"
            android:layout_marginBottom="@dimen/padding_5dp"
            android:background="@color/white" />


    </LinearLayout>

    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
       android:padding="@dimen/padding_15dp"
        android:text="Forgot  Password ？"
        android:textColor="#ffffffff"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_25dp"
        android:background="@drawable/botton_login_bg">

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/padding_13dp"
            android:text="SIGN IN"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@mipmap/logo_jinatou_red" />
    </RelativeLayout>


    <TextView
        android:id="@+id/zhuce_zhanghao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_15dp"
        android:text="New to ALIC-MART? Start Here."
        android:textColor="#ffb8c7e6"
        android:textSize="13sp" />


</LinearLayout>