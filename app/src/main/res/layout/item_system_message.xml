<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/system_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@drawable/drawable_system_message_time"
        android:paddingLeft="@dimen/padding_5dp"
        android:paddingRight="@dimen/padding_5dp"
        android:text="16:20"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_11dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_17dp">

        <TextView
            android:id="@+id/system_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【收盘简报】交易日20200407提醒及时关注行情数据"
            android:textColor="#ff333333"
            android:textSize="@dimen/textSize_15sp" />

        <TextView
            android:id="@+id/system_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_11dp"
            android:text="早上开盘到下午3点半属于亚盘，市zhidao场最为疲软，波动不大，这时候可以快进快出。3点半到8点半为欧盘，市场开始活跃，可以在最高点做空，或者最低点多。看5个点左右。"
            android:textColor="#ff888888"
            android:textSize="@dimen/textSize_13sp" />
    </LinearLayout>
</LinearLayout>