<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/rel_right"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="@dimen/padding_10dp">

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <ImageView
                android:id="@+id/userhead"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/text_lin"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@mipmap/userdefault"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/text_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="@dimen/padding_2dp"
                android:layout_toLeftOf="@id/userhead"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tv_chatcontent_lin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_chatcontent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/my_self_bg"
                        android:lineSpacingExtra="2dp"
                        android:paddingLeft="15dip"
                        android:paddingTop="@dimen/padding_10dp"
                        android:paddingRight="@dimen/padding_15dp"
                        android:paddingBottom="@dimen/padding_10dp"
                        android:text="retretrtrtrtrtretre"
                        android:textColor="#0B231F"
                        android:textSize="15sp" />
                    <!--<ImageView
                        android:layout_marginRight="5dp"
                        android:id="@+id/image_right"
                        android:visibility="gone"
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/padding_150dp"
                        android:layout_height="@dimen/padding_150dp"/>-->
                    <ImageView
                        android:layout_marginRight="5dp"
                        android:id="@+id/image_right"
                        android:visibility="gone"
                        android:layout_width="@dimen/padding_150dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/right_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_chatcontent_lin"
                    android:layout_marginLeft="@dimen/padding_10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="@dimen/padding_15dp"
                    android:gravity="end"
                    android:text="02:39 pm"
                    android:textColor="#ff9ba8c2"
                    android:textSize="10sp" />
            </RelativeLayout>


            <!--<ImageView
                android:id="@+id/msg_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_chatcontent"
                android:clickable="true"
                android:src="@drawable/msg_state_failed_resend"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_ack"
                style="@style/chat_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_chatcontent"
                android:text="@string/text_ack_msg"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_delivered"
                style="@style/chat_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_chatcontent"
                android:text="@string/text_delivered_msg"
                android:textSize="12sp"
                android:visibility="invisible" />-->

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_10dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="asdasdasd"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/img_robort_avart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/text_lin_lift"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:background="@mipmap/userdefault"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:id="@+id/text_lin_lift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_2dp"
            android:layout_marginRight="60dp"
            android:layout_toRightOf="@+id/img_robort_avart"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_chatcontent_lift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:autoLink="web"
                android:background="@drawable/duifang_sendbg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="left|center"
                android:lineSpacingExtra="2dp"
                android:paddingLeft="15dip"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_15dp"
                android:paddingBottom="@dimen/padding_10dp"
                android:text="fddffdfd"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp" />

            <!--<ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/image_lift"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/padding_150dp"
                android:layout_height="@dimen/padding_150dp"/>-->
            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/image_lift"
                android:visibility="gone"
                android:layout_width="@dimen/padding_150dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_marginTop="@dimen/padding_5dp"
                android:text="02:39 pm"
                android:textColor="#ff9ba8c2"
                android:textSize="13sp" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
