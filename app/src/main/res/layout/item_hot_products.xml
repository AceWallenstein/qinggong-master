<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="@dimen/padding_4dp"
        android:layout_marginRight="2dp"
        app:round_corner="5dp">

        <LinearLayout
            android:id="@+id/lin_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_160dp"
                    android:background="@color/white" />

            </RelativeLayout>


            <TextView
                android:id="@+id/name_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="Electric Motorc..."
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_5dp"
                android:layout_marginTop="@dimen/padding_14dp"
                android:layout_marginRight="@dimen/padding_5dp"
                android:layout_marginBottom="@dimen/padding_14dp"
                android:text="DA JIANG"
                android:textColor="#ffafbedb"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/chat_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn__angle_normal"
                    android:paddingLeft="@dimen/padding_25dp"
                    android:paddingTop="@dimen/padding_5dp"
                    android:paddingRight="@dimen/padding_25dp"
                    android:paddingBottom="@dimen/padding_5dp"
                    android:text="Chat"
                    android:textColor="#ffffffff"
                    android:textSize="13sp" />

                <View
                    android:layout_width="@dimen/padding_0dp"
                    android:layout_height="@dimen/padding_0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_shop_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@mipmap/white_car" />
            </LinearLayout>

        </LinearLayout>
    </com.gcssloop.widget.RCRelativeLayout>
</LinearLayout>