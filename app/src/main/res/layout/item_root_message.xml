<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_21dp"
    android:layout_marginTop="@dimen/padding_21dp"
    android:layout_marginRight="@dimen/padding_21dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_head_image"
            android:layout_width="@dimen/padding_55dp"
            android:layout_height="@dimen/padding_55dp"
            android:background="@color/color_F5F5F5" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Larry"
                android:textColor="#ff333333"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Ha ha! I know it!"
                android:textColor="#ff9ba8c2"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="202012:09"
                android:textColor="#ff9ba8c2"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/xiaoxi_num"
                    android:layout_width="@dimen/padding_15dp"
                    android:layout_height="@dimen/padding_15dp"
                    android:layout_alignRight="@+id/daipaidan"
                    android:background="@drawable/red_circle"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>