<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_note_dialog_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_25dp"
                android:text="Fill in the address"
                android:textColor="#ff333333"
                android:textSize="20sp" />




            <TextView
                android:id="@+id/submit_alert"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_30dp"
                android:layout_marginLeft="@dimen/padding_45dp"
                android:layout_marginTop="@dimen/padding_20dp"
                android:layout_marginRight="@dimen/padding_45dp"
                android:layout_marginBottom="@dimen/padding_10dp"
                android:background="@drawable/shop_detail_chat_bg"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>