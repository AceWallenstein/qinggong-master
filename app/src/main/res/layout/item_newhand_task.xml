<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/task_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:layout_marginRight="@dimen/padding_15dp"
        android:background="@color/white"
        android:padding="@dimen/padding_15dp">


        <ImageView
            android:id="@+id/new_now_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/home_authon" />

        <LinearLayout
            android:id="@+id/content_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_13dp"
            android:layout_toRightOf="@+id/new_now_title"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/task_first"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/subtitle_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/new_now_tv"
                android:layout_alignBottom="@+id/new_now_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/padding_5dp"
                android:text="@string/task_ward"
                android:textColor="@color/color_ff888888"
                android:textSize="@dimen/textSize_12sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/go_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="立即完成"
            android:textColor="@color/color_ceaf7f"
            android:textSize="@dimen/textSize_13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/content_lin"
        android:layout_marginLeft="@dimen/padding_13dp"
        android:layout_marginRight="@dimen/padding_13dp"
        android:layout_toRightOf="@+id/new_now_title"
        android:background="#F5F5F5"></View>

</LinearLayout>