<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_90dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/padding_90dp"
        android:layout_height="@dimen/padding_90dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/padding_90dp"
            android:layout_height="@dimen/padding_90dp"
            android:background="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@mipmap/white_car"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:text="Electric Motorc..."
            android:textColor="#ff333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginTop="5dp"
            android:text="DA JIANG"
            android:textColor="#D20B17"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/padding_0.1dp"
            android:layout_height="@dimen/padding_0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_april"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_14dp"
                android:background="@drawable/bg_text"
                android:paddingLeft="@dimen/padding_5dp"
                android:paddingTop="@dimen/padding_2dp"
                android:paddingRight="@dimen/padding_5dp"
                android:paddingBottom="@dimen/padding_2dp"
                android:text="April 29,2017"
                android:textColor="#ff9ba8c2"
                android:textSize="12sp" />
            <View
                android:layout_width="@dimen/padding_0.1dp"
                android:layout_height="@dimen/padding_0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tv_num"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textColor="#ff9ba8c2"
                android:textSize="16sp"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>