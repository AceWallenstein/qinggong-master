<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingTop="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/padding_85dp"
        android:layout_height="@dimen/padding_85dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_85dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electric Motor..."
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DA JIANG"
            android:textColor="#D20B17"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_seconds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DA JIANG"
            android:textColor="#ffa3b1cc"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_liv_room"
                android:paddingRight="10dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/padding_3dp"
                android:paddingTop="@dimen/padding_3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_home_live_red_5"
                android:text="Upload Live Room"
                android:textColor="@color/white" />
            <View
                android:layout_weight="1"
                android:layout_width="@dimen/padding_0dp"
                android:layout_height="@dimen/padding_0dp"/>

            <ImageView
                android:id="@+id/btn_del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@mipmap/delete_car" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>