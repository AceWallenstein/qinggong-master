<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/lin_root"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/padding_160dp"
        android:layout_height="@dimen/padding_180dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/padding_160dp"
            android:layout_height="@dimen/padding_160dp"
            android:background="@color/color_F5F5F5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@mipmap/white_car" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electric Motorc..."
        android:textColor="#ff333333"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_14dp"
        android:layout_marginBottom="@dimen/padding_14dp"
        android:text="DA JIANG"
        android:textColor="#D20B17"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/jifen_drawable_bg"
        android:paddingLeft="@dimen/padding_25dp"
        android:paddingTop="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_25dp"
        android:paddingBottom="@dimen/padding_10dp"
        android:text="Redeem Now"
        android:textColor="#ffffffff"
        android:layout_marginBottom="@dimen/padding_10dp"
        android:textSize="13sp" />
</LinearLayout>