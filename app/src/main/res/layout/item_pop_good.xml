<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginRight="@dimen/padding_20dp"
        android:layout_marginBottom="@dimen/padding_10dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:orientation="horizontal">

        <com.gcssloop.widget.RCRelativeLayout
            android:layout_width="@dimen/padding_80dp"
            android:layout_height="@dimen/padding_80dp"
            app:round_corner="@dimen/padding_6dp">

            <ImageView
                android:id="@+id/iv_user_head"
                android:layout_width="@dimen/padding_80dp"
                android:layout_height="@dimen/padding_80dp"
                android:src="@mipmap/home_my" />
        </com.gcssloop.widget.RCRelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_18dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isaac Hunt"
                android:textColor="#ff333333"
                android:textSize="19sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000"
                android:textColor="@color/hometabcorlor"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00000"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/bg_pop_red"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:paddingTop="@dimen/padding_3dp"
                    android:paddingBottom="@dimen/padding_3dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tuijain"
                    android:layout_gravity="right"/>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
</LinearLayout>